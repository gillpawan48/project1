<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />*@
    @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />*@
    @*<link href="~/Scripts/react/node_modules/semantic-ui-css/semantic.min.css" rel="stylesheet" />*@

    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    <script src="https://code.jquery.com/jquery-3.1.1.min.js"
            integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
            crossorigin="anonymous"></script>
    <link rel="stylesheet"
          href="//cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css" />

    <script src="~/Scripts/react/node_modules/semantic-ui-css/semantic.min.js"></script>

</head>
<body>


        <div class="ui fixed  inverted menu ">
            <div class="ui container">
                @Html.ActionLink("React", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

                @Html.ActionLink("Customers", "Index", "Customer", null, new { @class = "item" })
                @Html.ActionLink("Products", "Index", "Product", null, new { @class = "item" })
                @Html.ActionLink("Stores", "Index", "Store", null, new { @class = "item" })
                @Html.ActionLink("Sales", "Index", "Sale", null, new { @class = "item" })


            </div>
        </div>

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>

        @*<script src="~/Scripts/jquery-1.10.2.min.js"></script>*@
        @*<script src="~/Scripts/bootstrap.min.js"></script>*@

        @RenderSection("Scripts", required: false)
    </body>

</html>